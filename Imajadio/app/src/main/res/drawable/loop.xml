<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:drawable="@drawable/ic_action_repeat">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" />
        </shape>
    </item>

    <item android:state_checked="false" android:drawable="@drawable/ic_action_repeat">
        <shape android:shape="rectangle">
            <solid android:color="#A0A0A0" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" android:drawable="@drawable/ic_action_repeat">
            <solid android:color="#A0A0A0" />
        </shape>
    </item>

</selector>